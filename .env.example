# Environment Configuration for Legal Document Crawler
# Copy this file to .env and fill in your actual values

# =============================================================================
# GEMINI API CONFIGURATION
# =============================================================================
# Get your API key from: https://makersuite.google.com/app/apikey
# The model will be selected in the code (gemini-pro, gemini-pro-vision, etc.)
GEMINI_API_KEY=your_gemini_api_key_here

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL with pgvector
DATABASE_URL=postgresql://username:password@localhost:5432/postgres

# Qdrant Vector Database
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=your_qdrant_api_key_here

# =============================================================================
# CRAWLER CONFIGURATION
# =============================================================================
# BPK Website Configuration (usually don't need to change these)
BPK_BASE_URL=https://peraturan.bpk.go.id
CRAWLER_USER_AGENT=Mozilla/5.0 (compatible; LegalCrawler/1.0)
CRAWLER_DELAY_MS=500
CRAWLER_TIMEOUT_SECONDS=30

# =============================================================================
# FILE STORAGE PATHS
# =============================================================================
# Local storage paths for downloaded files
PDF_STORAGE_PATH=./data/pdfs
JSON_STORAGE_PATH=./data/json
TEXT_STORAGE_PATH=./data/text

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE_PATH=./logs/crawler.log

# =============================================================================
# RATE LIMITING
# =============================================================================
# Requests per minute to avoid overwhelming the BPK server
RATE_LIMIT_RPM=60
CONCURRENT_REQUESTS=5

# =============================================================================
# OPTIONAL: OCR CONFIGURATION
# =============================================================================
# If using OCR for PDF processing
TESSERACT_PATH=/usr/bin/tesseract
OCR_LANGUAGE=ind

# =============================================================================
# OPTIONAL: CACHE CONFIGURATION
# =============================================================================
# Redis for caching (if using caching)
REDIS_URL=redis://localhost:6379/0
CACHE_TTL_HOURS=24
